<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#FFF1EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/spell_background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/mean_star_btn"
            android:layout_width="73dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/star"
            android:layout_gravity="center_horizontal|top"/>

            <ImageButton
                android:id="@+id/mean_colorstar_btn"
                android:layout_width="73dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_star"
                android:layout_gravity="center_horizontal|top"
                android:visibility="invisible" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mean_test_correct"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/correct"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/mean_test_wrong"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/wrong"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/meantest_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="underwater"
                android:textSize="30dp"
                android:layout_marginBottom="30dp"/>

        </FrameLayout>

            <Button
                android:id="@+id/meantest_kor_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meaning_button"
                android:textSize="17dp"
                android:text="사과"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/meantest_kor_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meaning_button"
                android:textSize="17dp"
                android:text="물 속의"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/meantest_kor_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meaning_button"
                android:textSize="17dp"
                android:text="자몽"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/meantest_kor_btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meaning_button"
                android:textSize="17dp"
                android:text="유자"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>