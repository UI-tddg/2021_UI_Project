<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#FFF1EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/spell_background">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/star_btn"
                android:layout_width="73dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:src="@drawable/star"
                android:layout_gravity="center_horizontal|top"/>
            <ImageButton
                android:id="@+id/colorStar_btn"
                android:layout_width="73dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_star"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal|top"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/spell_box">
                <TextView
                    android:id="@+id/spelling_test_kor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="물속의"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_margin="50dp"/>
                <ImageView
                    android:id="@+id/spelling_test_correct"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/correct"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/spelling_test_wrong"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wrong"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/spelling_test_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="underwater"
                    android:layout_gravity="center|bottom"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="15dp"
                    android:visibility="invisible"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/spelling_test_eng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textNoSuggestions"
                    android:hint="답을 입력하세요."
                    android:background="@drawable/meaning_button"
                    android:layout_margin="15dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/spelling_test_submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spell_box"
                    android:text="제출"
                    android:layout_margin="10dp"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/spelling_test_hint_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spell_box"
                        android:text="힌트"
                        android:layout_margin="10dp"/>
                    <Button
                        android:id="@+id/spelling_test_pass_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spell_box"
                        android:text="패스"
                        android:layout_margin="10dp"
                        android:visibility="invisible"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>